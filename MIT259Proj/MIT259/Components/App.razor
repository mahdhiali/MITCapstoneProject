    <style>
       
        .form-control {
            padding: .12rem .45rem !important;
        }

        .form-select{
            padding: .12rem .45rem !important;
        }
        .required:after {
            content: " *";
            color: red;
        }
        /* White down arrow (bold) - right side */
        .down-arrow {
            position: relative;
            padding-right: 1.5rem; /* Space for arrow */
        }

            .down-arrow::after {
                content: "\F282";
                position: absolute;
                right: 0.5rem;
                background-repeat: no-repeat;
                background-position: center;
                background-size: contain;
                font-family: "bootstrap-icons";
            }

        .sub-mu-bg {
            background-color: #ffffffab !important;
            border: 0.5px solid #0000ff73 !important;
            color: var(--bs-primary) !important;
            margin-top: 0.25rem;
        }

            .sub-mu-bg:hover {
                color: #ffb310 !important;
            }


.bred {
            background-color: #0962b9 !important;
}




        /* Style tab links */
        .tablink {
            background-color: #555;
            color: white;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 5px 5px;
            font-size: 17px;
            width: 25%;
        }

            .tablink:hover {
                background-color: #777;
            }

        /* Style the tab content (and add height:100% for full page content) */
        .tabcontent {
            color: white;
            display: none;
            padding: 100px 20px;
            height: 100%;
        }

        #Home {
            background-color: red;
        }

        #News {
            background-color: green;
        }

        #Contact {
            background-color: blue;
        }

        #About {
            background-color: orange;
        }


       /*------------------------------------*/


        .tree-container {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        .tree-view {
            list-style-type: none;
            padding-left: 0;
            margin: 0;
        }

        .tree-node {
            margin: 4px 0;
        }

        .node-content {
            display: flex;
            align-items: center;
            padding: 6px 10px;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.2s;
            border: 1px solid transparent;
        }

            .node-content:hover {
                background-color: #f0f8ff;
                border-color: #d1e7ff;
            }

        .node-toggle {
            width: 20px;
            text-align: center;
            margin-right: 8px;
            font-size: 12px;
            color: #666;
        }

        .node-text {
            flex: 1;
            font-size: 14px;
            color: #333;
        }

        .child-count {
            font-size: 12px;
            color: #888;
            margin-left: 8px;
        }

        .node-children {
            margin-left: 30px;
            border-left: 2px solid #e0e0e0;
            padding-left: 15px;
            transition: all 0.3s ease;
        }

        /* Different background colors for different levels */
        .node-content[style*="level-1"] {
            background-color: #f9f9f9;
        }

        .node-content[style*="level-2"] {
            background-color: #f5f5f5;
        }

        .node-content[style*="level-3"] {
            background-color: #f0f0f0;
        }

        .node-content[style*="level-4"] {
            background-color: #ebebeb;
        }

        .node-content[style*="level-5"] {
            background-color: #e6e6e6;
        }
    </style>


