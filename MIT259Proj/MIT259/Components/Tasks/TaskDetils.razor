@page "/MyTasks/Inbox/{RId:int}/{Id:int}"

@rendermode InteractiveServer
@using Eclipse360.Models;
@using Eclipse360.Data;
@using Eclipse360.Servicese;
@using Eclipse360.Servicese.InsertDataaa;
@inject ViewDatas ViewDatass;
@inject LoadData loadDatas;
@inject InsrtData InsrtDatas;

<button class="tablink @(ActiveCode == 1 ? "bred" : "")" @onclick="@(() => ActiveCode = 1)">Inbox</button>
<button class="tablink @(ActiveCode == 2 ? "bred" : "")" @onclick="@(() => ActiveCode = 2)">Outbox</button>
<button class="tablink @(ActiveCode == 3 ? "bred" : "")" @onclick="@(() => ActiveCode = 3)">Completed</button>
<button class="tablink @(ActiveCode == 4 ? "bred" : "")" @onclick="@(() => ActiveCode = 4)">Draft</button>

@code {
    public int ActiveCode { get; set; } = 1;
}
@if (ActiveCode == 1)
{
    <div style="
          padding: 100px 20px;
          height: 100%;
                    background-color: #f7f7f7;">
        <Inbox />
    </div>
}
else if (ActiveCode == 2)
{
    <div style="
              padding: 100px 20px;
              height: 100%;
                background-color: #f7f7f7;">
        <h3>Outbox</h3>
        <p>Home is where the heart is..</p>
    </div>
}
else if (ActiveCode == 3)
{
    <div style="
              padding: 100px 20px;
              height: 100%;
                    background-color: #f7f7f7;">
        <h3>Completed</h3>
        <p>Home is where the heart is..</p>
    </div>
}
else if (ActiveCode == 4)
{
    <div style="
              padding: 100px 20px;
              height: 100%;
                    background-color: #f7f7f7;">
        <h3>Other</h3>
        <p>Home is where the heart is..</p>
    </div>
}


@code {
    [Parameter]
    public int RId { get; set; }

    [Parameter]
    public int Id { get; set; }

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }
}
